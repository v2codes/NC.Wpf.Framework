<Window x:Class="WpfApp1.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp1" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:WpfApp1.Properties" Title="MainWindow" Width="800" Height="450"
        mc:Ignorable="d">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="{x:Static res:Resources.Home}" />
            <TextBlock Text="{x:Static res:Resources.Title}" />
            <TextBlock Text="{x:Static res:Resources.Setting}" />
            <Button Width="100" Content="{x:Static res:Resources.Button}" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
